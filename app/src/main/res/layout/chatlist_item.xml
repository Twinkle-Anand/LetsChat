<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Chatlist_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Chatlist_profileView"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/people" />

    <TextView
        android:id="@+id/Chatlist_messageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Chatlist_profileView"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/Chatlist_profileView"
        android:background="@drawable/chatlist"
        android:hint="Text View"
        android:paddingLeft="12dp"
        android:paddingRight="24dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20sp" />

</RelativeLayout>