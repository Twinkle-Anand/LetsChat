<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:src="@drawable/people"
        android:id="@+id/usersSingle_image" />

    <TextView
        android:id="@+id/usersSingle_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/usersSingle_image"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        tools:text="Display Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/usersSingle_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usersSingle_displayName"
        android:layout_below="@+id/usersSingle_displayName"
        android:layout_marginTop="11dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp"
        tools:text="Status" />

    <ImageView
        android:id="@+id/onlineIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/usersSingle_displayName"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/usersSingle_displayName"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_brightness_1_black_24dp"
        tools:ignore="VectorDrawableCompat" />


</RelativeLayout>